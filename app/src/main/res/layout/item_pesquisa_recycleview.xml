<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:elevation="2dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="10"
        android:padding="0dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvPesquisadorItem"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/tvTipoPesquisaItem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/tvDataPesquisaItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/tvHoraPesquisaItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/tvLinhaPesquisaItem"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"
            />

        <TextView
            android:id="@+id/tvEstacaoPesquisaItem"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/tvAreaPesquisaItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"/>


        <TextView
            android:id="@+id/tvOrigemItem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/tvDestinoItem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:gravity="center"
            android:background="@drawable/grid_border"
            android:textSize="10dp"/>


    </GridLayout>

</androidx.cardview.widget.CardView>