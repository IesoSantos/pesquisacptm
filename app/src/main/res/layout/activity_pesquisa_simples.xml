<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PesquisaSimplesActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <include
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lblQuantidadePesquisaSimples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de Pesquisas Realizadas: 0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txtInstrucaoPesquisaSimples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione a Origem:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:id="@+id/checkboxCPTM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPTM"/>

        <CheckBox
            android:id="@+id/checkboxViaMobilidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViaMobilidade"/>

        <CheckBox
            android:id="@+id/checkboxViaQuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViaQuatro"/>

        <CheckBox
            android:id="@+id/checkboxMetro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MetrÃ´ SP"/>

        <CheckBox
            android:id="@+id/checkboxRua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rua"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnSalvarPesquisaSimples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Salvar"/>

        <Button
            android:id="@+id/btnEncerrarPesquisaSimples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Finalizar"/>
    </LinearLayout>

</LinearLayout>