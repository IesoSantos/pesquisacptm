<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PesquisaCompostaActivity"
    android:orientation="vertical">

    <include
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lblQuantidadePesquisaComposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de Pesquisas Realizadas: 0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/txtInstrucaoPesquisaCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione a Origem:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cor da linha (preto) -->

            <CheckBox
                android:id="@+id/checkboxCPTMCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPTM"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxViaMobilidadeCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViaMobilidade"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxViaQuatroCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViaQuatro"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxMetroCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metrô SP"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxRuaCompostaOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua"
                android:layout_gravity="center_horizontal"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cor da linha (preto) -->
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" /> <!-- Cor da linha (preto) -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInstrucaoPesquisaCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecione o Destino: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cor da linha (preto) -->

            <CheckBox
                android:id="@+id/checkboxCPTMCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPTM"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxViaMobilidadeCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViaMobilidade"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxViaQuatroCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViaQuatro"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxMetroCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metrô SP"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/checkboxRuaCompostaDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua"
                android:layout_gravity="center_horizontal"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" /> <!-- Cor da linha (preto) -->
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnSalvarPesquisaComposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Salvar"/>

        <Button
            android:id="@+id/btnEncerrarPesquisaComposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Finalizar"/>
    </LinearLayout>

</LinearLayout>